# Phrases
caller => "It was [=>employer] and [plot.employer.he] [plot.employer.was] in a hurry."
job_intro => "This required the peculiar expertise of the [=>name agency]."
job_intro => "Already it seemed like a tough case."
letter_arrived => "[plot.main_actor.name] was reading [=>letter_type] from [=>employer]."
phone_rang => "Suddenly, the phone rang."
phone_rang => "The silence was broken by the ringing of the telephone."
