# Contains all parts of scenes that are used in Plot.hec to compose the master plot

# Introductions
# Location
introduction E => "The rain was pouring like a madman outside the [=>name E].",
    E.location != null, plot.weather == "rainy"
introduction E => "Only the gentle patter of raindrops disturbed the silence of the [=>name E].",
    E.location != null, plot.weather == "rainy", plot.noise == "low"
introduction E => "Dark clouds peered in through the windows of the [=>name E].",
    E.location != null, plot.weather == "cloudy"
introduction E => "It was a quiet [plot.time_of_day] at the [=>name E].",
    E.location != null, plot.noise == "low"

# Scenes
arrival_to_scene => "[=>name plot.main_actor] entered the scene."

call => "[=>phone_rang] [=>caller] [=>job_intro]", let plot.call = "phone"
call => "[=>letter_arrived] [=>job_intro]", let plot.call = "letter"

